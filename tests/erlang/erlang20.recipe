# Bibop recipe for Erlang 20
# See more: https://github.com/essentialkaos/bibop

pkg erlang20

command "-" "Check environment"
  app epmd
  app erl
  app erlc
  app escript

command "erl -compile test" "Compile basic script"
  exit 0
  exist test.beam

command "erl -noshell -s test main -s init stop" "Execute basic script"
  exit 0
  output-contains "ERLANG WORKS"

command "-" "Cleanup"
  remove test.beam

command "escript ssl-test.erl" "Test support of ChaCha20 and TLS 1.2"
  exit 0
